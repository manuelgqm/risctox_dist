	FUNCTION vistaprevia(texto)
		texto = replace(texto,chr(13),"<br>")
		texto = replace(texto,"'","&#39;")
		texto = replace(texto,"<pag=","<a href=http://www.istas.net/webistas/index.asp?idpagina=")
		texto = replace(texto,"<ecopag=","<a href=http://www.istas.net/ecoinformas/web/index.asp?idpagina=")
		texto = replace(texto,"</pag>","</a>")
		texto = replace(texto,"<e=","<a target=_blank href=http://www.istas.net/webistas/abreenlace.asp?idenlace=")
		texto = replace(texto,"</e>","</a>")
		
		texto = replace(texto,"<t>","<font class=titulo>")
		texto = replace(texto,"</t>","</font>")
		texto = replace(texto,"<st>","<font class=subtitulo>")
		texto = replace(texto,"</st>","</font>")
		texto = replace(texto,"<pd>","<table width=95% align=center class=negro bgcolor=#FFFFFF><tr><td class=pd>")
		texto = replace(texto,"</pd>","</td></tr></table>")
		vistaprevia = texto
		
	END FUNCTION

