<%'da igual el elemento a asociar (sustancias a grupos, o sustancias a usos); se muestra el mismo formulario'la pagina de proceso si que distingue, para actualizar una u otra tabla%><!--#include file="dn_fun_comunes.asp"--><!--#include file="dn_auten.inc"--><!--#include file="adovbs.inc"--><!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN""http://www.w3.org/TR/html4/loose.dtd"><html><head><meta http-equiv="Content-Type" content="text/html; charset=windows-1252"><title>Istas</title><link rel="stylesheet" type="text/css" href="dn_estilos.css"><script type="text/javascript" src="niftycube.js"></script><script type="text/javascript">window.onload=function(){Nifty("div#box2","big"); }</script><script language="JavaScript" src="gen_validatorv2.js" type="text/javascript"></script></head><body><%flashMsgShow()%><div id="box2" class="centcontenido"><%id=request("id")asociar=request("asociar")if id="" or asociar="" then%><script>window.close();</script><%else	%><form name="myform" action="dn_asociarbloque2.asp?asociar=<%=asociar%>&id=<%=id%>" method="post" > <fieldset><legend><strong>Asociar sustancias en bloque</strong></legend>		<table border="0">		<tr>				<td align="left"><strong>Datos correspondientes a </strong>:</td>				<td align="left">				<input name="correspondena" type="radio" value="CAS" checked="checked" /> CAS				<input name="correspondena" type="radio" value="CE"  /> CE				<input name="correspondena" type="radio" value="NOMBRE" /> NOMBRE					</td>			</tr>						<tr>				<td align="left" valign="top"><strong>Sustancias</strong>:<br />				<small>(SEPARAR POR SALTO DE LÍNEA)</small></td>				<td align="left"><textarea name="sustancias" cols="90" rows="30"></textarea>								<%	if asociar="uso" then%>						<br /><br /><input name='toxico' value='1' type='checkbox' /> Uso Tóxico<%	end if%>						</td>			</tr>					</table></fieldset><p><input type="submit" value="Enviar" class="centcontenido"  /></p></form><script language="JavaScript" type="text/javascript">var frmvalidator = new Validator("myform");frmvalidator.addValidation("sustancias","req","Debe escribir las sustancias a asociar.");</script><%end if%></div></body></html>